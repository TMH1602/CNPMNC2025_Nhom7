@model IEnumerable<FastFoodCompareApp.Models.Dish>

<h2>So sánh món ăn</h2>

<div class="row">
    @foreach(var d in Model)
    {
        <div class="col-md-6 mb-3">
            <div class="dish-card @(d == Model.OrderBy(x=>x.Price/(x.Calories==0?1:x.Calories)).First() ? "highlight" : "")">
                <img src="@d.ImageUrl" alt="@d.Name" class="dish-image" onerror="this.src='/images/placeholder.png'"/>
                <div class="body">
                    <h4>@d.Name <span class="badge bg-light text-dark">@d.Price.ToString("C")</span></h4>
                    <p class="metric">Calories: <strong>@d.Calories</strong> kcal</p>
                    <p class="metric">Rating: <strong>@d.Rating</strong>/5</p>
                    <p class="metric">Giá/Cal: <strong>@( (double)d.Price / (d.Calories==0?1:d.Calories) ).ToString("N4")</strong></p>
                </div>
            </div>
        </div>
    }
</div>

<a href="@Url.Action("Index","Menu")" class="btn btn-secondary mt-3">Quay lại</a>
