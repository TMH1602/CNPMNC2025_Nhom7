@using FastFoodCompareAppEnhanced_v3_1
@using FastFoodCompareAppEnhanced_v3_1.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant Portal</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/auth.css" rel="stylesheet" />

    <style>
        .user-avatar {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background-color: #ff6a00;
            color: #ffffff;
            font-weight: 600;
            font-size: 1rem;
        }

        body {
            /* Ảnh nền (đã sửa cache-busting) */
            background-image: url('/images/restaurant_bg.jpg?v=1');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            
            padding-top: 56px; 
        }
        .navbar-admin {
            background-color: #495057 !important; 
            color: white !important;
             position: fixed;
             top: 0;
             left: 0;
             width: 100%;
             z-index: 1030; 
        }
        .sidebar {
            width: 250px;
            min-height: 100vh; 
            position: fixed; 
            z-index: 1000;
            top: 0; 
            left: 0;
            background-color: #343a40; 
            padding-top: 76px; 
            overflow-y: auto; 
        }

        /* SỬA LỖI: Đổi màu nền của khu vực nội dung thành TRONG SUỐT */
        .content-wrapper {
            margin-left: 250px; 
            padding: 20px;
            width: calc(100% - 250px);
            background-color: transparent; /* <--- SỬA Ở ĐÂY */
            min-height: calc(100vh - 56px); 
        }

        /* THÊM MỚI: Thêm nền mờ cho các card (bảng) để dễ đọc */
        .content-wrapper .card {
            background-color: rgba(255, 255, 255, 0.9); /* 90% mờ */
        }
        
        .nav-link.active-admin {
            background-color: #007bff !important; 
            color: white !important;
        }
         .sidebar .nav-link {
            color: #adb5bd; 
         }
         .sidebar .nav-link:hover {
            color: #fff; 
            background-color: #495057;
         }
         .sidebar .nav-link.active-admin { 
             font-weight: bold;
             color: #fff !important;
         }
    </style>
</head>
<body>
    
    <nav class="navbar navbar-admin navbar-expand-lg shadow-sm fixed-top">
        <div class="container-fluid"> 
            
            <a class="navbar-brand text-white" href="/Restaurant/Kitchen">
                <i class="bi bi-person-workspace me-2"></i> Restaurant FastFoodCompany
            </a>
            
            <div class="ms-auto d-flex align-items-center">
                @* <a href="/Menu/Index" class="btn btn-sm btn-outline-warning me-3 rounded-pill">
                    <i class="bi bi-house-door"></i> Quay về Web
                </a> *@
                <div class="d-flex align-items-center" id="admin-logged-in-state">
                    <span class="d-flex align-items-center me-3 text-white">
                        <span class="user-avatar me-2" id="user-avatar-initial"></span>
                        <strong id="user-display-name"></strong>
                    </span>
                    <button class="btn btn-sm btn-danger rounded-pill" id="logout-button">
                        Đăng xuất
                    </button>
                </div>
            </div>
        </div>
    </nav>
    
    <div class="sidebar d-flex flex-column text-white">
        @{
            var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
        }
         <ul class="nav nav-pills flex-column mb-auto">
             <li class="nav-item">
                 <a href="/Restaurant/Kitchen" class="nav-link @(currentPage == "/Kitchen" ? "active-admin" : "")"> 
                     <i class="bi bi-receipt me-2"></i> Quản lý Đơn hàng
                 </a>
             </li>
         </ul>
    </div>

    <div class="content-wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // URL trang đăng nhập
        window.RESTAURANT_LOGIN_URL = '/Account/Login'; 

        document.addEventListener("DOMContentLoaded", function () {
            
            const displayNameSpan = document.getElementById("user-display-name");
            const avatarSpan = document.getElementById("user-avatar-initial"); 
            const logoutButton = document.getElementById("logout-button");
            
            // Lấy username từ localStorage (phải khớp với key bạn dùng khi đăng nhập)
            const username = localStorage.getItem("username"); 

            if (username) {
                if(displayNameSpan) displayNameSpan.textContent = username; 
                if(avatarSpan && username.length > 0) avatarSpan.textContent = username.charAt(0).toUpperCase();
            } else {
                window.location.href = window.RESTAURANT_LOGIN_URL; 
                return;
            }

            if(logoutButton) {
                logoutButton.addEventListener("click", function (e) {
                    e.preventDefault(); 
                    localStorage.clear(); 
                    window.location.href = window.RESTAURANT_LOGIN_URL; 
                });
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false) 
</body>
</html>