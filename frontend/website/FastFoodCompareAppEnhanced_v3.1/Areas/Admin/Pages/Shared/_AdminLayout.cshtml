    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Khai b√°o bi·∫øn to√†n c·ª•c DUY NH·∫§T ·ªü ƒë√¢y
        window.ADMIN_LOGIN_URL = '/Account/Login'; 

        document.addEventListener("DOMContentLoaded", function () {
            
            const displayNameSpan = document.getElementById("user-display-name");
            const avatarSpan = document.getElementById("user-avatar-initial"); 
            const logoutButton = document.getElementById("logout-button");
            
            const username = localStorage.getItem("username"); 

            // Logic hi·ªÉn th·ªã Navbar Admin (Gi·ªØ nguy√™n)
            if (username) {
                if(displayNameSpan) displayNameSpan.textContent = username; 
                if(avatarSpan && username.length > 0) avatarSpan.textContent = username.charAt(0).toUpperCase();
            } else {
                window.location.href = window.ADMIN_LOGIN_URL; 
                return;
            }

            // Logic n√∫t ƒêƒÉng xu·∫•t (Gi·ªØ nguy√™n)
            if(logoutButton) {
                logoutButton.addEventListener("click", function (e) {
                    e.preventDefault(); 
                    localStorage.clear(); // X√≥a s·∫°ch local storage khi ƒëƒÉng xu·∫•t
                    window.location.href = window.ADMIN_LOGIN_URL; 
                });
            }

            // Logic l√†m n·ªïi b·∫≠t link sidebar ƒëang active (T√πy ch·ªçn)
            const currentPath = window.location.pathname;
            const sidebarLinks = document.querySelectorAll('.sidebar .nav-link');
            sidebarLinks.forEach(link => {
                // X√≥a active c≈© tr∆∞·ªõc khi th√™m m·ªõi
                link.classList.remove('active-admin'); 
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active-admin');
                }
            });

        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false) 
</body>
