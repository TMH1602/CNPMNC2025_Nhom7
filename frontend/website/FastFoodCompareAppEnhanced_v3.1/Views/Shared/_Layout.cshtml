    <script>
        // Khai b√°o h·∫±ng s·ªë
        const MENU_LOGIN_URL = '@Url.Action("Login", "Account")'; 
        const CART_ADD_API_URL = 'https://localhost:7132/api/Cart/add';

        // =================================================================
        // H√ÄM T·∫¢I S·ªê L∆Ø·ª¢NG GI·ªé H√ÄNG T·ª™ API (Cho Navbar)
        // (*** ƒê√É S·ª¨A L·ªñI 401 ***)
        // =================================================================

        window.loadCartCount = async function (user) {
            const cartCountSpan = document.getElementById("cartCount");
            
            // 1. L·∫•y token
            const token = localStorage.getItem('jwtToken');

            // 2. Ki·ªÉm tra (n·∫øu kh√¥ng c√≥ user HO·∫∂C token, th√¨ kh√¥ng g·ªçi API)
            if (!user || !token) { 
                if(cartCountSpan) cartCountSpan.textContent = 0;
                return;
            }

            // 3. M√£ h√≥a username (quan tr·ªçng)
            const encodedUser = encodeURIComponent(user);
            const apiUrl = `https://localhost:7132/api/Cart/${encodedUser}`;

            try {
                const response = await fetch(apiUrl, {
                    method: 'GET',
                    headers: { 
                        // 4. S·ª≠a 'accept' v√† th√™m 'Authorization'
                        'accept': 'application/json', // API cart tr·∫£ v·ªÅ JSON (cartData)
                        'Authorization': `Bearer ${token}` 
                    }
                });
                
                if (!response.ok) {
                    // Th√™m x·ª≠ l√Ω 401 (token h·∫øt h·∫°n)
                    if (response.status === 401) {
                         console.error("Token h·∫øt h·∫°n ho·∫∑c kh√¥ng h·ª£p l·ªá khi t·∫£i cart count.");
                         if(cartCountSpan) cartCountSpan.textContent = 0; 
                         return;
                    }
                    console.error("L·ªói khi t·∫£i gi·ªè h√†ng t·ª´ API:", response.status, response.statusText);
                    if(cartCountSpan) cartCountSpan.textContent = 0; 
                    return;
                }

                const cartData = await response.json();
                
                // ƒê·∫øm t·ªïng s·ªë l∆∞·ª£ng s·∫£n ph·∫©m, kh√¥ng ph·∫£i s·ªë lo·∫°i
                const totalItems = cartData.items ? 
                                     cartData.items.reduce((total, item) => total + (item.quantity || 0), 0) : 
                                     0;

                if (cartCountSpan) {
                    cartCountSpan.textContent = totalItems;
                }

            } catch (error) {
                console.error('L·ªói k·∫øt n·ªëi ho·∫∑c x·ª≠ l√Ω JSON:', error);
                if(cartCountSpan) cartCountSpan.textContent = 0; 
            }
        }
        
        // =================================================================
        // LOGIC KH·ªûI T·∫†O V√Ä G·∫ÆN S·ª∞ KI·ªÜN (Ch·∫°y khi DOM t·∫£i xong)
        // =================================================================

        document.addEventListener("DOMContentLoaded", function () {
            
            const loggedInState = document.getElementById("user-logged-in-state");
            const loggedOutState = document.getElementById("user-logged-out-state");
            const displayNameSpan = document.getElementById("user-display-name");
            const avatarSpan = document.getElementById("user-avatar-initial"); 
            const cartLink = document.querySelector('a[href="@Url.Action("Index","Cart")"]'); 

            const username = localStorage.getItem("username"); 

            // --- Logic Navbar (·∫®n/Hi·ªán UI d·ª±a tr√™n tr·∫°ng th√°i ƒëƒÉng nh·∫≠p) ---
            if (username) {
                if(displayNameSpan) displayNameSpan.textContent = username; 
                if(avatarSpan && username.length > 0) avatarSpan.textContent = username.charAt(0).toUpperCase();
                
                if(loggedInState) loggedInState.classList.remove("d-none");  
                if(loggedOutState) loggedOutState.classList.add("d-none"); 
                
                if(cartLink) {
                    cartLink.innerHTML = `üõí Gi·ªè (<span id="cartCount">0</span>)`;
                }
            } else {
                if(loggedInState) loggedInState.classList.add("d-none");  
                if(loggedOutState) loggedOutState.classList.remove("d-none"); 
                
                if(cartLink) {
                    cartLink.innerHTML = `üõí Gi·ªè`;
                }
            }
            
            // --- Code Chatbot (Gi·ªØ nguy√™n) ---
            const CHAT_API_URL = 'https://localhost:7132/api/Chat/Send';
            const chatToggleButton = document.getElementById("chat-toggle-button");
            const chatWindow = document.getElementById("chat-window");
            const chatCloseButton = document.getElementById("chat-close-button");
            const chatBody = document.getElementById("chat-body");
            const chatInput = document.getElementById("chat-input");
            const chatSendButton = document.getElementById("chat-send-button");
            if (chatToggleButton && chatWindow && chatCloseButton) {
                
                chatToggleButton.addEventListener("click", function() {
                    chatWindow.classList.toggle("show");
                });

                chatCloseButton.addEventListener("click", function() {
                    chatWindow.classList.remove("show");
                });
            }
            async function handleChatSend() {
                const message = chatInput.value.trim();
                if (message === '') return; 
                addMessageToChat(message, 'user');
                chatInput.value = '';
                chatSendButton.disabled = true; 
                const postData = {
                    context: message
                };
                try {
                    const response = await fetch(CHAT_API_URL, {
                        method: 'POST',
                        headers: {
                            'accept': 'text/plain',
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(postData)
                    });
                    if (!response.ok) {
                        throw new Error(`API Error: ${response.status}`);
                    }
                    const result = await response.json();
                    if (result && result.responseContext) {
                        addMessageToChat(result.responseContext, 'bot');
                    } else {
                        addMessageToChat("L·ªói: Kh√¥ng nh·∫≠n ƒë∆∞·ª£c ph·∫£n h·ªìi h·ª£p l·ªá.", 'bot');
                    }
                } catch (error) {
                    console.error('L·ªói khi g·ªçi API Chat:', error);
                    addMessageToChat("Xin l·ªói, ƒë√£ c√≥ l·ªói k·∫øt n·ªëi. Vui l√≤ng th·ª≠ l·∫°i.", 'bot');
                } finally {
                    chatSendButton.disabled = false;
                }
            }
            if (chatSendButton && chatInput && chatBody) {
                
                chatSendButton.addEventListener('click', handleChatSend);

                chatInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault(); 
                        handleChatSend();
                    }
                });
            }
            function addMessageToChat(message, type = 'bot') {
                const messageDiv = document.createElement('div');
                messageDiv.className = `chat-message-${type}`; 
                messageDiv.innerText = message; 
                chatBody.appendChild(messageDiv);
                chatBody.scrollTop = chatBody.scrollHeight;
            }
            // --- K·∫øt th√∫c Chatbot ---

            
            // üéØ G·ªçi h√†m t·∫£i s·ªë l∆∞·ª£ng gi·ªè h√†ng (ch·ªâ g·ªçi khi ƒë√£ ƒëƒÉng nh·∫≠p)
            if (username) {
                window.loadCartCount(username); 
