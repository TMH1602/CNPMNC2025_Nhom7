@using FastFoodCompareAppEnhanced_v3_1
@using FastFoodCompareAppEnhanced_v3_1.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Fast Food Compare</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/auth.css" rel="stylesheet" />

    <style>
        .user-avatar {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background-color: #ff6a00;
            color: #ffffff;
            font-weight: 600;
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">FastFood Compare</a>
            <div class="ms-auto d-flex align-items: center">
                
                <a href="@Url.Action("Index","Cart")" class="btn btn-outline-primary btn-sm me-3">
                    üõí Gi·ªè (<span id="cartCount">0</span>)
                </a>

                <div class="dropdown d-none" id="user-logged-in-state">
                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarUserDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="user-avatar me-2" id="user-avatar-initial"></span>
                        <strong id="user-display-name"></strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarUserDropdown">
                        <li><a class="dropdown-item" href="#">L·ªãch s·ª≠ ƒë∆°n h√†ng</a></li>
                        
                        <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")">C·∫≠p nh·∫≠t t√†i kho·∫£n</a></li>
                        
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" id="logout-button" href="#">ƒêƒÉng xu·∫•t</a></li>
                    </ul>
                </div>

                <div id="user-logged-out-state" class="d-flex align-items-center">
                    <a href="@Url.Action("Login","Account")" class="btn btn-outline-primary btn-sm me-2">ƒêƒÉng nh·∫≠p</a>
                    <a href="@Url.Action("Register","Account")" class="btn btn-gradient btn-sm">ƒêƒÉng k√Ω</a>
                </div>

            </div>
        </div>
    </nav>
    
    <div class="container">
        @RenderBody()
    </div>

    <footer class="text-center mt-5 mb-4 text-muted">¬© 2025 FastFood Compare</footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            
            const loggedInState = document.getElementById("user-logged-in-state");
            const loggedOutState = document.getElementById("user-logged-out-state");
            const displayNameSpan = document.getElementById("user-display-name");
            const avatarSpan = document.getElementById("user-avatar-initial"); 
            const cartCountSpan = document.getElementById("cartCount");

            const username = localStorage.getItem("username"); 

            if (username) {
                // *** ƒê√É ƒêƒÇNG NH·∫¨P ***
                if(displayNameSpan) displayNameSpan.textContent = username; 
                if(avatarSpan && username.length > 0) avatarSpan.textContent = username.charAt(0).toUpperCase();
                if(loggedInState) loggedInState.classList.remove("d-none");  
                if(loggedOutState) loggedOutState.classList.add("d-none");  
            } else {
                // *** CH∆ØA ƒêƒÇNG NH·∫¨P ***
                if(loggedInState) loggedInState.classList.add("d-none");   
                if(loggedOutState) loggedOutState.classList.remove("d-none"); 
            }

            // (Code gi·ªè h√†ng)
            let cartCount = 0;
            const cartJson = localStorage.getItem("CART_ITEMS"); 
            if (cartJson) {
                try {
                    const cart = JSON.parse(cartJson);
                    cartCount = cart.reduce((total, item) => total + (item.quantity || 1), 0);
                } catch (e) { }
            }
            if(cartCountSpan) cartCountSpan.textContent = cartCount;

            // (Code n√∫t ƒëƒÉng xu·∫•t)
            const logoutButton = document.getElementById("logout-button");
            if(logoutButton) {
                logoutButton.addEventListener("click", function (e) {
                    e.preventDefault(); 
                    localStorage.removeItem("username");
                    localStorage.removeItem("jwtToken"); 
                    localStorage.removeItem("CART_ITEMS"); 
                    window.location.href = "@Url.Action("Login", "Account")";
                });
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>