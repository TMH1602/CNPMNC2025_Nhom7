            const items = getCartFromCache(); // L·∫•y m·∫£ng items t·ª´ cache

            if (!Array.isArray(items) || items.length === 0) {
                cartContainer.innerHTML = '<div class="alert alert-info">Gi·ªè h√†ng tr·ªëng.</div>';
