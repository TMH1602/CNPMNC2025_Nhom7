            }

            // 2. Ki·ªÉm tra v√† chuy·ªÉn ƒë·ªïi gi√° tr·ªã nh·∫≠p v√†o
            let quantityToRemove = parseInt(inputQuantity);

            if (isNaN(quantityToRemove) || quantityToRemove <= 0) {
