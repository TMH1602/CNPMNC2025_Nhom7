        }

        // === G·∫ÆN S·ª∞ KI·ªÜN ===
        cartContainer.addEventListener('click', async function(event) {
            
            // X√≥a 1 m√≥n
            if (event.target && event.target.classList.contains('remove-item-btn')) {
