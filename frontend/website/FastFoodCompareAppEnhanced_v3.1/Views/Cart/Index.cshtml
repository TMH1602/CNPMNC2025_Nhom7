                console.error("L·ªói fetch gi·ªè h√†ng:", error);
                cartContainer.innerHTML = `<div class="alert alert-danger">L·ªói khi t·∫£i gi·ªè h√†ng: ${error.message}</div>`;
                saveCartToCache([]); 
