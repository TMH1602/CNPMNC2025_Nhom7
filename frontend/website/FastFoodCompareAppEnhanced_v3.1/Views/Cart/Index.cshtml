                }
                
                alert(`ƒê√£ x√≥a ${quantityToRemove} s·∫£n ph·∫©m kh·ªèi gi·ªè h√†ng.`);
                // T·∫£i l·∫°i to√†n b·ªô gi·ªè h√†ng sau khi x√≥a th√†nh c√¥ng
                await loadCartFromServer(); 
                
            } catch (error) {
