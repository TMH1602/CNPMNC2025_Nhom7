@{
    ViewData["Title"] = "Đăng ký";
}

<div class="auth-card">
    <div class="auth-hero">
        <h2>Tạo tài khoản mới</h2>
        <p class="small-muted">Nhanh chóng, đơn giản và miễn phí</p>
    </div>

    <div id="error-message" class="alert alert-danger" style="display:none;"></div>
    <div id="success-message" class="alert alert-success" style="display:none;"></div>


    <form id="registerForm">
        <div class="mb-3">
            <label class="form-label" for="username">Tên đăng nhập</label>
            <input type="text" class="form-control" id="username" name="username" required />
        </div>
        
        <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" required />
        </div>

        <div class="mb-3">
            <label class="form-label" for="password">Mật khẩu</label>
            <input type="password" class="form-control" id="password" name="password" required />
        </div>
         <div class="mb-3">
            <label class="form-label" for="Address">Địa chỉ</label>
            <input type="Address" class="form-control" id="Address" name="Address" required />
        </div>

        <button type="submit" class="btn btn-gradient w-100">Đăng ký</button>
    </form>

    <div class="mt-3 text-center">
        <span>Đã có tài khoản? <a href="@Url.Action("Login","Account")" class="signup-link">Đăng nhập</a></span>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('registerForm').addEventListener('submit', async function(event) {
            
            event.preventDefault();

            const username = document.getElementById('username').value;
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const Address = document.getElementById('Address').value;
            
            const errorMessageDiv = document.getElementById('error-message');
            const successMessageDiv = document.getElementById('success-message');

            errorMessageDiv.style.display = 'none';
            successMessageDiv.style.display = 'none';

            const data = {
                username: username,
                password: password,
                email: email,
                Address: Address
            };

            try {
                const response = await fetch('https://localhost:7132/api/Auth/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        // 1. SỬA LẠI: Yêu cầu JSON
                        'accept': 'application/json' 
                    },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    // 2. SỬA LẠI: Đọc JSON
                    const resultData = await response.json(); 
                    
                    // 3. SỬA LẠI: Hiển thị thông báo tùy chỉnh
                    successMessageDiv.textContent = "Đăng ký thành công! Bạn sẽ được chuyển đến trang đăng nhập sau 3 giây.";
                    successMessageDiv.style.display = 'block';

                    setTimeout(() => {
                        window.location.href = '@Url.Action("Login", "Account")';
                    }, 3000);

                } else {
                    // Đăng ký thất bại
                    let errorText = 'Đăng ký thất bại. Vui lòng thử lại.';
                    try {
                        // Lỗi (như 400) thường trả về JSON
                        const errorData = await response.json();
                        if (errorData && errorData.message) {
                             errorText = errorData.message; 
                        } else {
                             errorText = await response.text();
                        }
                    } catch(e) {
                         errorText = await response.text();
                    }
                    errorMessageDiv.textContent = errorText;
                    errorMessageDiv.style.display = 'block';
                }
            } catch (error) {
                // Lỗi mạng
                console.error('Lỗi khi gọi API:', error);
                errorMessageDiv.textContent = 'Không thể kết nối đến máy chủ. Vui lòng kiểm tra lại.';
                errorMessageDiv.style.display = 'block';
            }
        });
    </script>
}