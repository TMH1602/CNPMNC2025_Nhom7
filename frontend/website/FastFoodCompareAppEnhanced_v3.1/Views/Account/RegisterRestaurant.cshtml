@{
    ViewData["Title"] = "Đăng ký";
}

<div class="auth-card">
    <div class="auth-hero">
        <h2>Tạo tài khoản mới</h2>
        <p class="small-muted">Nhanh chóng, đơn giản và miễn phí</p>
    </div>

    <div id="error-message" class="alert alert-danger" style="display:none;"></div>
    <div id="success-message" class="alert alert-success" style="display:none;"></div>


    <form id="registerForm">
        <div class="mb-3">
            <label class="form-label" for="username">Tên đăng nhập</label>
            <input type="text" class="form-control" id="username" name="username" required />
        </div>
        
        <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" required />
        </div>

        <div class="mb-3">
            <label class="form-label" for="password">Mật khẩu</label>
            <input type="password" class="form-control" id="password" name="password" required />
        </div>
         <div class="mb-3">
            <label class="form-label" for="Address">Địa chỉ</label>
            <input type="Address" class="form-control" id="Address" name="Address" required />
        </div>

        <button type="submit" class="btn btn-gradient w-100">Đăng ký</button>
    </form>

    <div class="mt-3 text-center">
        <span>Đã có tài khoản? <a href="@Url.Action("Restaurant","Account")" class="signup-link">Đăng nhập</a></span>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('registerForm').addEventListener('submit', async function(event) {
            
            // 1. Ngăn form submit theo cách truyền thống
            event.preventDefault();

            const username = document.getElementById('username').value;
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const Address = document.getElementById('Address').value;
            
            const errorMessageDiv = document.getElementById('error-message');
            const successMessageDiv = document.getElementById('success-message');

            // Ẩn thông báo cũ
            errorMessageDiv.style.display = 'none';
            successMessageDiv.style.display = 'none';

            // 2. Tạo đối tượng JSON theo yêu cầu của API (từ cURL)
            const data = {
                username: username,
                password: password,
                email: email,
                Address: Address
            };

            try {
                // 3. Gửi request đến API bằng 'fetch'
                const response = await fetch('https://localhost:7132/api/Auth/registerRes', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'accept': 'text/plain'
                    },
                    body: JSON.stringify(data)
                });

                // 4. Xử lý kết quả
                if (response.ok) {
                    // Đăng ký thành công
                    const resultText = await response.text(); // Lấy text (vì API trả về 'text/plain')
                    
                    successMessageDiv.textContent = resultText + " Bạn sẽ được chuyển đến trang đăng nhập sau 3 giây.";
                    successMessageDiv.style.display = 'block';

                    // Chờ 3 giây rồi chuyển đến trang đăng nhập
                    setTimeout(() => {
                        window.location.href = '@Url.Action("Restaurant", "Account")';
                    }, 3000);

                } else {
                    // Đăng ký thất bại
                    let errorText = 'Đăng ký thất bại. Vui lòng thử lại.';
                    try {
                        errorText = await response.text(); // Lấy lỗi chi tiết từ API
                    } catch(e) {
                        // Bỏ qua nếu không đọc được
                    }
                    errorMessageDiv.textContent = errorText;
                    errorMessageDiv.style.display = 'block';
                }
            } catch (error) {
                // Lỗi mạng
                console.error('Lỗi khi gọi API:', error);
                errorMessageDiv.textContent = 'Không thể kết nối đến máy chủ. Vui lòng kiểm tra lại.';
                errorMessageDiv.style.display = 'block';
            }
        });
    </script>
}